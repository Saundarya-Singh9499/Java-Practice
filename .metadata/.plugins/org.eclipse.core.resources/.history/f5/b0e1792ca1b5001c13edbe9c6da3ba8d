package TakeInputandPrint;

import java.util.Scanner;

public class ArrayTakeInput {

	public static int[] takeInput() {
    	
    	Scanner sc = new Scanner(System.in);
    	
    	int n = sc.nextInt();
 
    	int arr[] = new int[n];
    	
    	for(int i = 0 ; i < n ; i++) {
    		
    		System.out.println("Enter the " + i + " th Element");
    		
    		arr[i] = sc.nextInt();
    	}
    
           return arr;
    }

}
