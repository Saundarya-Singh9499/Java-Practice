package Stacks;

import LinkedList1.Node;

public class StackUsingLinkedList<T> {

    private Node<T> head;
    
    private int size;
    
    private Node<T> temp;
    
   public StackUsingLinkedList() {
	   
	   head = null;
	   
	   size = 0;
   }
  
    public void push(T elem) {
    	
     temp = new Node<>(elem);
     
     if( head == null ) {
    	 
    	 head = temp;
    	 
      }
     
     else {
    	 
    	 temp.next = head;
    	 
    	 head = head.next;
     }
     
     size+= 1;
    
    }
      
   public int size() {
	  
	  return size;
  
  }
      
//    public boolean isEmpty() {
//    	
//    	
//    
//    }
  
      public T top() {
    	  
      return head.data;	  
      
      }

    
}
