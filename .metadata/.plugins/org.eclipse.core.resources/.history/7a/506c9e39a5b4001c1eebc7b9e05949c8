package Queues;

import LinkedList1.Node;

public class QueuesUsingLinkedList<T> {


  private Node<T> front;
  
  private Node<T> rear;
  
  private int size;
  
  private Node<T> temp;
  
  public QueuesUsingLinkedList() {
	  
	  front = null;
	  
	  rear = null;
	  
	  temp = null;
	  
	  size = 0;
  }
  
    public void enqueue( T elem ) {
    	
    	temp = new Node<>(elem);
    
    	
    	if(temp == null ) {
    		
    		front = temp;
    		
    		rear = temp;
    	}
          
    	else {
    		
    		rear.next = temp;
    		
    		rear = rear.next;
    	}
           size+= 1;
    }   

      public int size() {
	  
	    return size;
  }

   public T front() throws QueuesEmptyException {
	   
	   if( front == null ) {
		   
		   QueuesEmptyException e  = new QueuesEmptyException();
		   
		   throw e;
	   
	   }
	   
	   return front.data;
   }

      public T dequeue() throws QueuesEmptyException {
    	  
        if( front == null ) {
        	
          QueuesEmptyException e = new QueuesEmptyException();
          
          throw e;
        
        }
    	  
    	  T contain = front.data;
    	  
    	  front = front.next;
    	  
    	  return contain;
    	  
    }

      public boolean isEmpty() {
    	  
    	  if( front == null ) {
    		  
               return true;
           
    	  }
      
    	  else {
    		  
    		  return false;
    	  }
      }
}
