package Stacks;

import LinkedList1.Node;

public class StackUsingLinkedList<T> {

    private Node<T> head;
    
    private int size;
    
    private Node<T> tail;
    
    private Node<T> temp;
    
   public StackUsingLinkedList() {
	   
	   head = null;
	   
	   tail = null;
	   
	   size = 0;
   }
  
    public void push(T elem) {
    	
     temp = new Node<>(elem);
     
     if( head == null ) {
    	 
    	 head = temp;
    	 
    	 tail = temp;
     }
     
     else {
    	 
    	 tail.next = temp;
    	    
    	    tail = tail.next;
     }
     
     size+= 1;
    
    }
      
   public int size() {
	  
	  return size;
  
  }
      
//    public boolean isEmpty() {
//    	
//    	
//    }
//  
//      public T top() {
//    	  
//    	  
//      }

    
}
